# Backend Environment Variables
# Copy this file to .env and fill in your values with secure credentials

# Server Configuration
PORT=5000
NODE_ENV=development

# Backend URL (pour Stripe et images)
BACKEND_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/eshop
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eshop?retryWrites=true&w=majority

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# JWT Configuration
# ⚠️ IMPORTANT: Change this to a strong secret key in production (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-secret-key-with-32-characters-minimum-change-in-production
JWT_EXPIRE=1d

# Email Configuration (Optional)
# Get these from your email service provider
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-api-key-here
EMAIL_FROM=your-email@example.com

# AWS S3 (Optional - for image uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Stripe (Optional - for payments)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Logging
LOG_LEVEL=debug

# Admin Configuration
# Default admin credentials for script execution
# Modify these values BEFORE running the create:admin script
ADMIN_EMAIL=admin@eshop.com
ADMIN_PASSWORD=Admin123@
